{% extends 'base.html.twig' %}

{% block title %}Portfolio index{% endblock %}

{% block body %}
    <h1>Portfolio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Date</th>
                <th>Link</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for portfolio in portfolios %}
            <tr>
                <td>{{ portfolio.id }}</td>
                <td>{{ portfolio.title }}</td>
                <td>{{ portfolio.image }}</td>
                <td>{{ portfolio.date ? portfolio.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ portfolio.link }}</td>
                <td>{{ portfolio.description }}</td>
                <td>
                    <a href="{{ path('app_crud_show', {'id': portfolio.id}) }}">show</a>
                    <a href="{{ path('app_crud_edit', {'id': portfolio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_crud_new') }}">Create new</a>
{% endblock %}
